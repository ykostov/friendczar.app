<ul>
<%= if @current_person do %>
  <li><%= @current_person.email %></li>
  <li><%= link "Settings", to: Routes.person_settings_path(@conn, :edit), class: "btn btn-outline-primary" %></li>
  <li><%= link "Log out", to: Routes.person_session_path(@conn, :delete), method: :delete, class: "btn btn-outline-primary" %></li>
<% else %>
  <li><%= link "Register", to: Routes.person_registration_path(@conn, :new), class: "btn btn-outline-primary" %></li>
  <li><%= link "Log in", to: Routes.person_session_path(@conn, :new), class: "btn btn-outline-primary" %></li>
<% end %>
</ul>
